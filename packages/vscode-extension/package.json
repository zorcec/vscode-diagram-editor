{
  "name": "agent-watch-vscode-extension",
  "displayName": "AgentWatch",
  "description": "VS Code extension that runs risk-focused code review in the background while AI agents work",
  "version": "0.0.1",
  "publisher": "agent-watch",
  "repository": {
    "type": "git",
    "url": "https://github.com/zorcec/agent-watch.git",
    "directory": "packages/vscode-extension"
  },
  "main": "dist/extension.js",
  "browser": "dist/extension.js",
  "types": "dist/extension.d.ts",
  "scripts": {
    "build": "npm run check-types && esbuild src/extension.ts --bundle --platform=node --format=cjs --external:vscode --outfile=dist/extension.js --sourcemap",
    "check-types": "tsc --noEmit",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "esbuild": "^0.19.0"
  },
  "engines": {
    "vscode": ">=1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "agentWatch.arm",
        "title": "AgentWatch: Arm / Start Watching"
      },
      {
        "command": "agentWatch.disarm",
        "title": "AgentWatch: Disarm / Stop Watching"
      }
    ]
  }
}
