{
  "name": "diagramflow-monorepo",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "package": "npm run package --workspace packages/vscode-extension",
    "test": "vitest run --exclude '**/e2e/**'",
    "test:watch": "vitest --exclude '**/e2e/**'",
    "test:coverage": "vitest run --exclude '**/e2e/**' --coverage",
    "e2e": "npm run build && xvfb-run -a npx playwright test",
    "e2e:headed": "npm run build && npx playwright test --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.3.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "electron": "^39.1.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
